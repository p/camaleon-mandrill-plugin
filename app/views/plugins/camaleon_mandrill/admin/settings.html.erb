<%= form_for(admin_plugins_camaleon_mandrill_settings_path, html: {id: 'mandrill_form', class: 'validate'}) do %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title"> <%= t('plugin.camaleon_mandrill.settings.title') %></h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.camaleon_mandrill.form.smtp_username') %> </span>
            <%= text_field_tag("mandrill[smtp_username]", @mandrill[:smtp_username], class: "required form-control") %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.camaleon_mandrill.form.smtp_password') %> </span>
            <%= text_field_tag("mandrill[smtp_password]", @mandrill[:smtp_password], class: "required form-control") %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.camaleon_mandrill.form.default_from') %> </span>
            <%= text_field_tag("mandrill[default_from]", @mandrill[:default_from], class: "required form-control") %>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <a class="btn btn-default" href="<%= url_for admin_plugins_path %>"><%= t('admin.button.back') %></a>
        <button class="btn btn-primary pull-right" type="submit"><%= t('admin.button.submit') %></button>
      </div>
    </div>

<% end %>
